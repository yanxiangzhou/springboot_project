<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.baidu.springboot.response.mapper.UserMapper">

    <resultMap type="com.baidu.springboot.response.entity.User" id="UserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="getAllUsers" resultMap="UserMap">
        SELECT id, name FROM user
    </select>

    <select id="getUserById" parameterType="int" resultType="com.baidu.springboot.response.entity.User">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <insert id="addUser" parameterType="com.baidu.springboot.response.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user(id, name) VALUES(#{id}, #{name})
    </insert>

    <delete id="deleteUserById" parameterType="int">
        DELETE FROM user WHERE id = #{id}
    </delete>

</mapper> 